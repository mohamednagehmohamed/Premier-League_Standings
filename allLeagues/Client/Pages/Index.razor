<div>
    @*Cards*@

    <MudGrid>
        <MudItem xs="12" sm="12" md="12">
            <MudText Typo="Typo.h6" Style="font-weight:bold">Premier League Statistics</MudText>
        </MudItem>
    </MudGrid>
    <MudItem xs="12" sm="12" md="12">
        <MudGrid Spacing="2">
            <MudItem xs="12" sm="12" md="6">
                <MudPaper Class="px-7 py-3"
                          Style="color:white;background-color:#515E6E">

                    <MudStack Row
                              AlignItems="AlignItems.Center"
                              Spacing="4">
                        <MudIcon Icon="@Icons.Filled.PlayForWork" Style="font-size:65px" />
                        <MudStack Spacing="0">
                            <MudText Typo="Typo.h3">@PalyedGames</MudText>
                            <MudText Typo="Typo.h6">Played Games</MudText>
                        </MudStack>
                    </MudStack>
                    </MudPaper>
                    </MudItem>
                    <MudItem xs="12" sm="12" md="6">
                    <MudPaper Class="px-7 py-3"
                          Style="color:white;background-color:orange">

                    <MudStack Row
                              AlignItems="AlignItems.Center"
                              Spacing="4">
                        <MudIcon Icon="@Icons.Filled.PlaylistAddCheck" Style="font-size:65px;" />
                        <MudStack Spacing="0">
                            <MudText Typo="Typo.h3">@numberofGoals</MudText>
                            <MudText Typo="Typo.h6">Number Of Goals</MudText>
                        </MudStack>
                    </MudStack>
                    </MudPaper>
                    </MudItem>
                    <MudItem xs="12" sm="12" md="6">
                    <MudPaper Class="px-7 py-3"
                          Style="color:white;background-color:cyan">

                    <MudStack Row
                              AlignItems="AlignItems.Center"
                              Spacing="4">
                        <MudIcon Icon="@Icons.Filled.MeetingRoom" Style="font-size:65px" />
                        <MudStack Spacing="0">
                            <MudText Typo="Typo.h3">@points</MudText>
                            <MudText Typo="Typo.h6">Sum Of Points</MudText>
                        </MudStack>
                    </MudStack>
                    </MudPaper>
                    </MudItem>
                    <MudItem xs="12" sm="12" md="6">

                    <MudPaper Class="px-7 py-3"
                          Style="color:white;background-color:#37873e">

                    <MudStack Row
                              AlignItems="AlignItems.Center"
                              Spacing="4">
                        <MudIcon Icon="fas fa-house-user" Style="font-size:65px" />
                        <MudStack Spacing="0">
                            <MudText Typo="Typo.h3">@tableDtos.Count</MudText>
                            <MudText Typo="Typo.h6">Number Of Teams</MudText>
                        </MudStack>
                    </MudStack>
                    </MudPaper>
                    </MudItem>

