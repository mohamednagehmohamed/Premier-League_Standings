                    </MudGrid>
                    </MudItem>
                    <MudPaper Class="px-7 py-3 mt-2"
              Style="color:white;background-color:mediumvioletred">

                    <MudStack Row
                  AlignItems="AlignItems.Center"
                  Spacing="4">
            <MudIcon Icon="fas fa-house-user" Style="font-size:65px" />
            <MudStack Spacing="0" Row>
                <MudImage Width="50" Height="50" Src="@premierleague.season?.winner?.crest" Alt="" Class="rounded-lg"></MudImage>
                <MudText Typo="Typo.h3">@premierleague.season?.winner?.name</MudText>
                <MudImage  Width="50" Height="50" Src="/cup.png" Alt="" Class="rounded-lg ml-5"></MudImage>
            </MudStack>
        </MudStack>
    </MudPaper>
    <div class="d-flex align-center justify-space-between mt-2">
        <MudText Align="Align.Start" Typo="Typo.h5" dir="rtl">Premier League standings</MudText>
    </div>
    @if (tableDtos!=null)
    {
        <MudTable Items="@tableDtos"
              T="TableDto"
              Dense="true"
              Hover="true"
              Bordered="true"
              Striped="true"
              Class="mt-2"
              Style="margin-bottom:20px">
            <NoRecordsContent>
                <MudText>No Data Found</MudText>
            </NoRecordsContent>

            <HeaderContent>
                <MudTh>team</MudTh>
                <MudTh>playedGames</MudTh>
                <MudTh>W</MudTh>
                <MudTh>L</MudTh>
                <MudTh>D</MudTh>
                <MudTh>GF</MudTh>
                <MudTh>GA</MudTh>
                <MudTh>GD</MudTh>
                <MudTh>Pts</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd>
                    <MudStack>
                        <MudImage Width="50" Height="50" Src="@context.team?.crest" Alt="" Class="rounded-lg"></MudImage>
                        <MudText Typo="Typo.body1">@context.team?.name</MudText>
                    </MudStack>
                </MudTd>
                <MudTd>@context.playedGames</MudTd>
                <MudTd>@context.won</MudTd>
                <MudTd>@context.lost</MudTd>
                <MudTd>@context.draw</MudTd>
                <MudTd>@context.goalsFor</MudTd>
                <MudTd>@context.goalsAgainst</MudTd>
                <MudTd>@context.goalDifference</MudTd>
                <MudTd>@context.points</MudTd>


            </RowTemplate>

        </MudTable>
    }

                 

</div>

